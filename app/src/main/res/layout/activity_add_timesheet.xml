<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTimesheet"
    android:background="@drawable/background">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblAddHead"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="675dp"
            android:text="Add timesheet"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtAddTimeName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="216dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="488dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Name"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/ibtnAddImage"
            android:layout_width="94dp"
            android:layout_height="92dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="562dp"
            android:background="@drawable/rounded_corner"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/stat_sys_upload" />

        <TextView
            android:id="@+id/lblAddImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="169dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="536dp"
            android:text="Add image"
            android:textColor="#65FFFFFF"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTimeDescription"
            android:layout_width="235dp"
            android:layout_height="94dp"
            android:layout_marginStart="88dp"
            android:layout_marginTop="352dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="285dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:gravity="top"
            android:hint="Description"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnAddTimes"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="133dp"
            android:layout_marginTop="650dp"
            android:layout_marginEnd="132dp"
            android:layout_marginBottom="33dp"
            android:backgroundTint="#3C9A14"
            android:text="Add Timesheet"
            android:textColor="@color/black"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtStartDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="261dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="443dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Enter start date"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtEndDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="87dp"
            android:layout_marginTop="307dp"
            android:layout_marginEnd="88dp"
            android:layout_marginBottom="397dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Enter end date"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnNav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="345dp"
            android:layout_marginBottom="665dp"
            android:background="@drawable/rounded_corner"
            android:src="@drawable/baseline_apps_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>