<?xml version="1.0" encoding="utf-8"?>
<androidx.drawerlayout.widget.DrawerLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawerLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AddTimesheet"
    android:background="@drawable/background2">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/lblEditTimesheet"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="91dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="92dp"
            android:layout_marginBottom="675dp"
            android:text="Edit Entry"
            android:textAllCaps="true"
            android:textColor="@color/black"
            android:textSize="30dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <AutoCompleteTextView
            android:id="@+id/cmbTsCategory"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="391dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="305dp"
            android:background="@drawable/rounded_corner"
            android:clickable="true"
            android:focusable="false"
            android:hint="Select a category"
            android:inputType="none"
            android:paddingLeft="12dp"
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnAddTsImage"
            android:layout_width="94dp"
            android:layout_height="92dp"
            android:layout_marginStart="158dp"
            android:layout_marginTop="77dp"
            android:layout_marginEnd="159dp"
            android:layout_marginBottom="562dp"
            android:background="@drawable/rounded_corner"
            android:scaleType="fitCenter"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:srcCompat="@android:drawable/stat_sys_upload" />

        <TextView
            android:id="@+id/lblChangeImage"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="160dp"
            android:layout_marginTop="169dp"
            android:layout_marginEnd="160dp"
            android:layout_marginBottom="536dp"
            android:text="Change image"
            android:textColor="#65FFFFFF"
            android:textSize="19dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btnNav"
            android:layout_width="50dp"
            android:layout_height="50dp"
            android:layout_marginStart="16dp"
            android:layout_marginTop="43dp"
            android:layout_marginEnd="330dp"
            android:layout_marginBottom="635dp"
            android:background="@drawable/rounded_corner"
            android:scaleType="fitCenter"
            android:src="@drawable/baseline_apps_24"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintHorizontal_bias="0.044"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintVertical_bias="0.063" />

        <EditText
            android:id="@+id/txtTsName"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="252dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="444dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Timesheet Name"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTsDescription"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="85dp"
            android:layout_marginTop="319dp"
            android:layout_marginEnd="86dp"
            android:layout_marginBottom="377dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Description"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTsDate"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="459dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="237dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Date"
            android:inputType="text"
            android:paddingLeft="12dp"
            android:focusable="false"
            android:clickable="false"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <EditText
            android:id="@+id/txtTsTotalTime"
            android:layout_width="250dp"
            android:layout_height="35dp"
            android:layout_marginStart="80dp"
            android:layout_marginTop="537dp"
            android:layout_marginEnd="81dp"
            android:layout_marginBottom="159dp"
            android:background="@drawable/rounded_corner"
            android:ems="10"
            android:hint="Total Time"
            android:focusable="false"
            android:clickable="false"
            android:inputType="textPassword"
            android:paddingLeft="12dp"
            android:text=""
            android:textColor="@color/black"
            android:textColorHint="#65FFFFFF"
            android:textSize="20dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnTsSaveChanges"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="126dp"
            android:layout_marginTop="609dp"
            android:layout_marginEnd="127dp"
            android:layout_marginBottom="74dp"
            android:backgroundTint="#3C9A14"
            android:text="Save Changes"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <Button
            android:id="@+id/btnDeleteEntry"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="134dp"
            android:layout_marginTop="667dp"
            android:layout_marginEnd="135dp"
            android:layout_marginBottom="16dp"
            android:backgroundTint="@android:color/holo_red_light"
            android:text="Delete Entry"
            android:textColor="@color/black"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTsName"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="228dp"
            android:layout_marginEnd="190dp"
            android:layout_marginBottom="479dp"
            android:text="Timesheet Name:"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTsCategory"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="367dp"
            android:layout_marginEnd="255dp"
            android:layout_marginBottom="340dp"
            android:text="Category:"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTsDesc"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="295dp"
            android:layout_marginEnd="237dp"
            android:layout_marginBottom="412dp"
            android:text="Description:"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTsDate"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="435dp"
            android:layout_marginEnd="290dp"
            android:layout_marginBottom="272dp"
            android:text="Date:"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/lblTsTotalTime"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="80dp"
            android:layout_marginTop="513dp"
            android:layout_marginEnd="242dp"
            android:layout_marginBottom="194dp"
            android:text="Total Time:"
            android:textColor="@color/black"
            android:textSize="18dp"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

    </androidx.constraintlayout.widget.ConstraintLayout>

    <com.google.android.material.navigation.NavigationView
        android:id="@+id/nav_view"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/nav_menu"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true">

    </com.google.android.material.navigation.NavigationView>

</androidx.drawerlayout.widget.DrawerLayout>